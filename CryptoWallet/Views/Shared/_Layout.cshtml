<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CryptoWallet BMD</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background="~/fonts/bgimage.svg">

    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                @Html.ActionLink("CryptoWallet BMD", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Rates", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Exchange", "Exchange", "BankAccounts")</li>
                        <li>@Html.ActionLink("Transactions", "Transactions", "BankAccounts")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")

            </div>




        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <footer>
            <h4> @DateTime.Now - CryptoWallet BMD</h4>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        setTimeout(function () {
            location.reload()
        }, 5 * 60 * 1000);
    </script>
    <!--Actualizez pagina la fiecare 5 minute-->
</body>
</html>

